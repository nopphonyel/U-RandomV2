<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="songPicked"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TRACK QUEUE NUMBER -->
        <TextView
            android:id="@+id/track_queue_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textSize="90dp"
            android:textColor="#e4e4e4"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/track_art_work"
            android:src="@drawable/default_cover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRACK_TITLE"
            android:id="@+id/track_title"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignTop="@+id/track_art_work"
            android:layout_toEndOf="@+id/track_art_work" />

        <!-- TRACK DURATION -->
        <TextView
            android:id="@+id/track_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRACK DURATION"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/track_title"
            android:layout_toEndOf="@+id/track_art_work"
            />

        <!-- USER ICON -->
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/img_source"
            android:layout_below="@+id/track_duration"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_soundcloud_track"
            android:layout_toEndOf="@+id/track_art_work"/>

        <!-- USER UPLOADER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TRACK_OWNER"
            android:id="@+id/track_owner"
            android:layout_below="@+id/track_duration"
            android:layout_alignBottom="@+id/img_source"
            android:layout_toEndOf="@+id/img_source" />

        <!-- GENRE ICON -->
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/genre_icon"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_genre"
            android:layout_below="@+id/track_owner"
            android:layout_toEndOf="@+id/track_art_work" />

        <!-- GENRE TEXT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GENRES"
            android:layout_marginTop="2dp"
            android:id="@+id/genre"
            android:layout_below="@+id/track_owner"
            android:layout_toEndOf="@+id/genre_icon" />

    </RelativeLayout>

</android.support.v7.widget.CardView>