<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/playing_track_cover"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_dark_background"
        android:elevation="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_cover" />

    <TextView
        android:id="@+id/playing_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playing_track_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="TRACK_TITLE"
        android:textSize="18dp"
        android:textColor="#454545" />

    <ImageView
        android:id="@+id/loveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playing_track_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:src="@mipmap/ic_action_unlove" />

    <TextView
        android:id="@+id/playing_track_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playing_track_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="TRACK_ARTIST"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="#454545" />

</RelativeLayout>