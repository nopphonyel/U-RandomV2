<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipToPadding="false"
    android:padding="4dp"
    tools:context="com.urandom.utech.cardviewsoundcloudversion.NowPlaying">

    <ImageView
        android:id="@+id/playing_track_cover"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_dark_background"
        android:elevation="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_cover" />

    <TextView
        android:id="@+id/playing_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playing_track_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="TRACK_TITLE"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#454545" />

    <ImageView
        android:id="@+id/loveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playing_track_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:clickable="true"
        android:src="@mipmap/ic_action_unlove" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:src="@mipmap/plat_btn" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/playBtn"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/playBtn"
                android:clickable="true"
                android:src="@mipmap/back_btn" />


            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/playBtn"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/playBtn"
                android:src="@mipmap/next_btn" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/playBtn"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:theme="@style/AppTheme" />

            <ProgressBar
                android:id="@+id/wait_for_streaming"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/playBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:theme="@style/AppTheme" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/playing_track_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playing_track_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="TRACK_ARTIST"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="#454545" />

</RelativeLayout>
