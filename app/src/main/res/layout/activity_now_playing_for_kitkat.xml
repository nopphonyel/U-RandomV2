<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipToPadding="false"
    android:padding="4dp"
    tools:context="com.urandom.utech.cardviewsoundcloudversion.NowPlaying">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_playing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/view2">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_now_playing_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="0dp"
            android:paddingTop="7dp"
            android:textColor="#f10050"/>

    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:elevation="4dp"
        android:id="@+id/view2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:src="@mipmap/plat_btn" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/playBtn"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/playBtn"
                android:clickable="true"
                android:src="@mipmap/back_btn" />


            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/playBtn"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/playBtn"
                android:src="@mipmap/next_btn" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/playBtn"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:theme="@style/AppTheme" />

            <TextView
                android:id="@+id/now_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOW_TIME"
                android:layout_below="@+id/seekBar"
                android:layout_marginBottom="15dp"
                android:layout_alignStart="@+id/seekBar" />

            <TextView
                android:id="@+id/duration_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURATION_TIME"
                android:layout_below="@+id/seekBar"
                android:layout_alignEnd="@+id/seekBar" />

            <ProgressBar
                android:id="@+id/wait_for_streaming"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/playBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:theme="@style/AppTheme" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
