<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="4dp"
    android:clipToPadding="false"
    tools:context="com.urandom.utech.cardviewsoundcloudversion.NowPlaying">

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/playing_track_cover"
        android:src="@drawable/default_cover"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:background="@color/cardview_dark_background"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/playing_track_title"
        android:layout_below="@+id/playing_track_cover"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#454545"
        android:layout_centerHorizontal="true"
        android:text="TRACK_TITLE"/>

    <ImageButton
        android:src = "@mipmap/ic_action_unlove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loveButton"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/playBtn"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/loveButton" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/backBtn"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/loveButton"
        android:layout_toStartOf="@+id/playing_track_title"
        android:layout_marginTop="36dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:src="@mipmap/nextBtn"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/playing_track_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#454545"
        android:text="TRACK_ARTIST"
        android:layout_below="@+id/playing_track_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
